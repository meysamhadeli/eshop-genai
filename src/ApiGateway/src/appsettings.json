{
  "AppOptions": {
    "Name": "ApiGateway"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    }
  },
  "HealthOptions": {
    "Enabled": false
  },
  "Yarp": {
    "routes": {
      "catalog": {
        "clusterId": "catalog",
        "match": {
          "path": "catalog/{**catch-all}"
        },
        "Transforms":  [
          {
            "PathRemovePrefix": "catalog"
          }
        ]
      },
      "basket": {
        "clusterId": "basket",
        "match": {
          "path": "basket/{**catch-all}"
        },
        "Transforms":  [
          {
            "PathRemovePrefix": "basket"
          }
        ]
      },
      "order": {
        "clusterId": "order",
        "match": {
          "path": "order/{**catch-all}"
        },
        "Transforms":  [
          {
            "PathRemovePrefix": "order"
          }
        ]
      }
    },
    "clusters": {
      "catalog": {
        "destinations": {
          "destination1": {
            "address": "http://localhost:5004"
          }
        }
      },
      "basket": {
        "destinations": {
          "destination1": {
            "address": "http://localhost:6010"
          }
        }
      },
      "order": {
        "destinations": {
          "destination1": {
            "address": "http://localhost:6020"
          }
        }
      }
    }
  },
  "AllowedHosts": "*"
}
